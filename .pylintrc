[MASTER]
# Use multiple processes to speed up Pylint
jobs=1

[MESSAGES CONTROL]
# Disable specific warnings that are acceptable for this codebase
disable=
    too-many-lines,          # Large server file is acceptable for MCP server
    too-many-public-methods, # MCP server needs many tool methods
    too-many-instance-attributes, # Client needs multiple config attributes
    too-many-arguments,      # Error class needs multiple parameters
    invalid-name,            # do_GET is required by HTTP server framework
    arguments-differ,        # log_message override is intentional
    global-statement,        # Global client is acceptable for main entry point
    line-too-long            # Will fix gradually

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

[DESIGN]
# Maximum number of arguments for function / method
max-args=6
# Maximum number of attributes for a class
max-attributes=8
# Maximum number of public methods for a class
max-public-methods=60
# Maximum number of lines in a module
max-module-lines=2500
